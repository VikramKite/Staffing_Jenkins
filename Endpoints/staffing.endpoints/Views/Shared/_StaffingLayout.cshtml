
@{
    ViewBag.Title = "_StaffingLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="description" content="Commission System">
    <title>Staffing System</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Template/css/main.css")">
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="app sidebar-mini rtl">
    <!-- Navbar-->
    <header class="app-header">
        <a class="app-header__logo" href="#"><img src="@Url.Content("~/Template/img/devcool-logo-h-white.png")" alt="" style="padding: 15px 0px;" /></a>
        <!-- Sidebar toggle button--><a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar" style="padding: 15px 10px;"></a>
        <div class="app-nav" style="padding: 15px 10px;">
            @Html.Partial("_LoginPartial")
        </div>

    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        @if (!string.IsNullOrEmpty(Session["RoleID"].ToString()))
        {
            if (Convert.ToString(Session["RoleID"]) == "1")
            {
                <ul class="app-menu">
                    <li><a class="app-menu__item active" href="@Url.Action("Dashboard", "Staffing")"><i class="app-menu__icon fa fa-dashboard"></i><span class="app-menu__label">Dashboard</span></a></li>
                    <li><a class="app-menu__item" href="@Url.Action("AddNewStaffing", "Staffing")"><i class="app-menu__icon fa fa-plus"></i><span class="app-menu__label">Add New Job</span></a></li>
                    <li><a class="app-menu__item" href="@Url.Action("Index", "Staffing")"><i class="app-menu__icon fa fa-th-list"></i><span class="app-menu__label">View All Jobs</span></a></li>
                    <li><a class="app-menu__item" href="@Url.Action("RegisterUser", "Account")"><i class="app-menu__icon fa fa-user fa-lg"></i><span class="app-menu__label">Add New User</span></a></li>
                    <li><a class="app-menu__item" href="@Url.Action("Index", "Account")"><i class="app-menu__icon fa fa-th-list"></i><span class="app-menu__label">View All Users</span></a></li>
                    @*<li><a class="app-menu__item" href="@Url.Action("Index", "Account")"><i class="app-menu__icon fa fa-edit"></i><span class="app-menu__label">Reset Password</span></a></li>*@
                </ul>
            }
            if (Convert.ToString(Session["RoleID"]) == "2")
            {
                <ul class="app-menu">
                    <li><a class="app-menu__item active" href="@Url.Action("Dashboard", "Staffing")"><i class="app-menu__icon fa fa-dashboard"></i><span class="app-menu__label">Dashboard</span></a></li>
                    @*<li><a class="app-menu__item" href="@Url.Action("AddNewStaffing", "Staffing")"><i class="app-menu__icon fa fa-plus"></i><span class="app-menu__label">Add New Job</span></a></li>*@
                    <li><a class="app-menu__item" href="@Url.Action("index", "Staffing")"><i class="app-menu__icon fa fa-th-list"></i><span class="app-menu__label">View All Jobs</span></a></li>
                </ul>
            }


        }
    </aside>
    <main class="app-content">
        @RenderBody()
    </main>
    <!-- Essential javascripts for application to work-->
    <script src="@Url.Content("~/Template/js/jquery-3.2.1.min.js")"></script>
    <script src="@Url.Content("~/Template/js/popper.min.js")"></script>
    <script src="@Url.Content("~/Template/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Template/js/main.js")"></script>
    <script src="~/Scripts/CustomJavaScript.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="@Url.Content("~/Template/js/plugins/pace.min.js")"></script>

    <!-- Bootstrap DatePicker -->
    @if (IsSectionDefined("js"))
    {
        @RenderSection("js", true)
    }
</body>
</html>

